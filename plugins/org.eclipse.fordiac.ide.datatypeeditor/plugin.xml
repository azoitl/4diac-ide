<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>  
   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="Data Type Editor"
            extensions="dtp"
            default="true"
            class="org.eclipse.fordiac.ide.datatypeeditor.editors.DataTypeEditor"
            id="org.eclipse.fordiac.ide.model.datatype.dtp"
            icon="fordiacimage://ICON_DATA_TYPE"
            matchingStrategy="org.eclipse.fordiac.ide.ui.editors.FordiacEditorMatchingStrategy">
      </editor>
   </extension>
   <extension
         point="org.eclipse.fordiac.ide.typeeditor.typeEditorPage">
      <editorPage
            class="org.eclipse.fordiac.ide.datatypeeditor.editors.DataTypeEditorPage"
            sortIndex="20">
         <enablement>
            <instanceof
                  value="org.eclipse.fordiac.ide.model.data.AnyDerivedType">
            </instanceof>            
         </enablement>
      </editorPage>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyContributor">
      <propertyContributor
            contributorId="org.eclipse.fordiac.ide.datatypeeditor.editors.DataTypeEditor">
         <propertyCategory
               category="DataType">
         </propertyCategory>
      </propertyContributor>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyTabs">
      <propertyTabs
            contributorId="org.eclipse.fordiac.ide.datatypeeditor.editors.DataTypeEditor">
         <propertyTab
               category="DataType"
               id="org.eclipse.fordiac.ide.datatypeeditor.propertyDataTypeInfoTab"
               label="TypeInfo">
         </propertyTab>
         <propertyTab
               afterTab="org.eclipse.fordiac.ide.datatypeeditor.propertyDataTypeInfoTab"
               category="DataType"
               id="org.eclipse.fordiac.ide.datatypeeditor.propertyStructAttributeTab"
               label="Attributes">
         </propertyTab>
      </propertyTabs>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertySections">
      <propertySections
            contributorId="org.eclipse.fordiac.ide.datatypeeditor.editors.DataTypeEditor">
         <propertySection
               class="org.eclipse.fordiac.ide.datatypeeditor.properties.DataTypeInfoSection"
               id="org.eclipse.fordiac.ide.datatypeeditor.properties.DataTypeInfoSection"
               tab="org.eclipse.fordiac.ide.datatypeeditor.propertyDataTypeInfoTab">
   		<input
                  type="org.eclipse.fordiac.ide.model.data.StructuredType">
        </input>
     <input
           type="org.eclipse.fordiac.ide.model.libraryElement.VarDeclaration">
     </input>  
         </propertySection>
         <propertySection
               class="org.eclipse.fordiac.ide.datatypeeditor.properties.StructAttributeSection"
               id="org.eclipse.fordiac.ide.datatypeeditor.properties.StructAttributeSection"
               tab="org.eclipse.fordiac.ide.datatypeeditor.propertyStructAttributeTab">
   		<input
                  type="org.eclipse.fordiac.ide.model.data.StructuredType">
        </input>
     <input
           type="org.eclipse.fordiac.ide.model.libraryElement.VarDeclaration">
     </input>  
         </propertySection>
      </propertySections>
   </extension>
</plugin>
